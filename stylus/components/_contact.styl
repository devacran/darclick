.contact
  padding-top: 50px;
  padding-bottom: 80px;
  background-color: secondaryColor;
  color: fontPrimaryColor;
  &_wraper
    max-width: 1000px;
    center()
  &_container
    margin-top: 60px;
    display: flex;
    justify-content: space-around;

.contact-info
  width: 400px;
  display: flex;
  flex-direction: column;
  img
    max-width: 50px;
    padding-right: 20px;
  &_line
    padding-top: 20px;
    display: inherit;
    align-items: center;


.contact-form
  width: 400px;
  border-radius: 10px;
  padding: 25px;
  background-color: thirdyColor;
  &_field
    margin: 0.5em 0;
    width: 100%;
    height: 2em;
    border-radius: 5px;
    border: none;
    padding: 0.5em;
